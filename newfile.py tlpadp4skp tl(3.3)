try:
    bulan = int(input("Masukkan bulan (1-12): "))
    if bulan < 1 or bulan > 12:
        print("Bulan yang Anda masukkan tidak ada")
    else:
        hari_per_bulan = [31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31]
        print("Jumlah hari:", hari_per_bulan[bulan - 1])
except:
    print("Input tidak valid. Masukkan angka antara 1 dan 12.")